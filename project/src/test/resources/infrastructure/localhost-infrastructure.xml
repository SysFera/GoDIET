<?xml version="1.0" encoding="UTF-8"?>
<godiet:infrastructure xmlns:godiet="http://www.sysfera.com"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.sysfera.com ../Infrastructure.xsd">

	<domain id="DomainLocalhost" />
	<node id="mynode">
		<ssh id="lo" domain="DomainLocalhost" login="mylogin" server="127.0.0.1" />
		<env>
			<var name="PATH"
				value="/omniNamesInstallPath/bin:/dietInstallPath/bin:$PATH" />
			<var name="LD_LIBRARY_PATH"
				value="/omniNamesInstallPath/lib:/dietInstallPath/lib:$LD_LIBRARY_PATH" />
		</env>
		<scratch dir="/tmp/scratch/" />
	
	</node>


</godiet:infrastructure>