<?xml version="1.0" encoding="UTF-8"?>
<dietDescription xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="GoDietNG.xsd">

	<goDietConfiguration debug="1" saveStdOut="true"
		saveStdErr="true" log="true">
		<localscratch dir="/tmp/scratch_godiet" />
		<user>
			<ssh>
				<key path="fakeuser/id_rsa" />
			</ssh>
		</user>
	</goDietConfiguration>

	<infrastructure>
		<domain label="Local">
			<storage label="MyDisk">
				<scratch dir="/tmp/scratch_runtime" />
				<scp server="127.0.0.1" login="phi" />
			</storage>

			<node id="MyNode" disk="MyDisk">
				<ssh server="127.0.0.1" login="phi" />
				<env>
					<var name="PATH"
						value="~/Soft/Diet/bin:~/Soft/Diet/bin/examples/dmat_manips/:$PATH" />
					<var name="LD_LIBRARY_PATH" value="~/Soft/diet/build/lib" />
				</env>
			</node>
		</domain>
	</infrastructure>
	<dietServices>
		<omniNames id="omniNamesDomain1">
			<config server="MyNode" remoteBinary="omniNames" />
		</omniNames>
	</dietServices>

	<dietInfrastructure>
		<masterAgent id="ma1">
			<config server="MyNode" remoteBinary="dietAgent" />
			<localAgent id="la1">
				<config server="MyNode" remoteBinary="dietAgent" />
				<sed id="sed1">
					<config server="MyNode" remoteBinary="dmat_manips_server" />
					<parameters string="T" />
				</sed>
			</localAgent>
		</masterAgent>
	</dietInfrastructure>

</dietDescription>
