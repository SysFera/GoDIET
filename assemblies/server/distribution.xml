<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>server-with-dependencies</id>

	<formats>
		<format>tar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<dependencySets>
		<dependencySet>
			<outputDirectory>lib/</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>

	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>${project.build.outputDirectory}</directory>
			<outputDirectory>/</outputDirectory>

		</fileSet>
		<!-- Embedding launching scripts -->
		<fileSet>
			<directory>${project.basedir}/..</directory>

			<includes>
				<include>run-server.sh</include>

			</includes>
		</fileSet>
		<!-- Embedding Configuration samples -->
		<fileSet>
			<directory>${project.basedir}/resources</directory>
			<includes>
				<include>server.properties.sample</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<!-- Embedding PDF -->
		<fileSet>
			<directory>${project.basedir}/../../doc</directory>
			<includes>
				<include>*.pdf</include>
			</includes>
			<outputDirectory>/doc</outputDirectory>
		</fileSet>
		<!-- Include defaults template directory -->
		<fileSet>
			<directory>${project.basedir}/../../project/src/main/resources/configuration/templates</directory>
			<includes>
				<include>*.config</include>
			</includes>
			<outputDirectory>/templates</outputDirectory>
		</fileSet>

	</fileSets>

</assembly>